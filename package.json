{
    "name": "nestjs-cls",
    "version": "1.6.2",
    "description": "A continuation-local storage module compatible with NestJS's dependency injection.",
    "author": "papooch",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Papooch/nestjs-cls.git"
    },
    "homepage": "https://github.com/Papooch/nestjs-cls#readme",
    "keywords": [
        "nest",
        "nestjs",
        "cls",
        "continuation-local-storage",
        "als",
        "AsyncLocalStorage",
        "async_hooks",
        "request context"
    ],
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "scripts": {
        "prepublish": "tsc",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "peerDependencies": {
        "@nestjs/common": "> 7.0.0 < 9",
        "@nestjs/core": "> 7.0.0 < 9"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/graphql": "^9.0.5",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/platform-fastify": "^8.0.6",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/cls-hooked": "^4.3.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "apollo-server-express": "^3.3.0",
        "class-validator": "^0.13.1",
        "cls-hooked": "^4.2.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "graphql": "^15.6.0",
        "jest": "^27.0.6",
        "mercurius": "^8.4.2",
        "nestjs-mercurius": "^0.20.1",
        "prettier": "^2.3.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "isolatedModules": true,
                "maxWorkers": 1
            }
        }
    }
}
